                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="#acacac" Margin="2, 0">
                                    <ContentPresenter x:Name="ContentSite"
